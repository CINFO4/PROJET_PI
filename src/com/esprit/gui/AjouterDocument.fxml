<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.gui.AjouterDocumentController">
    <stylesheets>
        <URL value="@ajouterdocument.css"/>
    </stylesheets>
     <children>
        <VBox alignment="CENTER" spacing="10.0" layoutX="150" layoutY="50">
            <Label text="Document Information" />
            
            <HBox spacing="10.0">
                <Label text="Title:" />
                <TextField fx:id="tfTitle" />
            </HBox>
            
            <HBox spacing="10.0">
                <Label text="Description:" />
                <TextArea fx:id="taDescription" />
            </HBox>
            
            <HBox spacing="10.0">
                <Label text="Type:" />
                <TextField fx:id="tfType" />
            </HBox>
            
            <HBox spacing="10.0">
                <Label text="Link:" />
                <TextField fx:id="tfLink" />
            </HBox>
            
            <HBox spacing="10.0">
                <Label text="User ID:" />
                <TextField fx:id="tfUserId" />
            </HBox>
            
            <Button text="Add Document" onAction="#ajouterDocument" />
        </VBox>
    </children>
    
    
</AnchorPane>
